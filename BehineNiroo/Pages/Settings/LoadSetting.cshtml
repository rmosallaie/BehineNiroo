@page
@model BehineNiroo.LoadSettingModel
@{
    ViewData["Title"] = "بارگذاری تنظیمات";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-center text-white">بارگذاری تنظیمات</h1>
<br />
<div class="card">
    <div class="card-header">
        <h3 class="text-right">جزئیات</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2" style="font-weight:bold;font-size:1.1rem;font-family:'B Yekan'">
                @*@Html.DisplayNameFor(model => model.setting.Name)*@
                نام تنظیم
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.setting.Name)
            </dd>
            <dt class="col-sm-2" style="font-weight:bold;font-size:1.1rem;font-family:'B Yekan'">
                @*@Html.DisplayNameFor(model => model.setting.Items)*@
                آیتم&zwnj;ها
            </dt>
            <dd class="col-sm-10" style="word-wrap:break-word">
                @Html.DisplayFor(model => model.setting.Items)
            </dd>
            <dt class="col-sm-2" style="font-weight:bold;font-size:1.1rem;font-family:'B Yekan'">
                @*@Html.DisplayNameFor(model => model.setting.FromDate)*@
                از تاریخ
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.setting.FromDate)
            </dd>
            <dt class="col-sm-2" style="font-weight:bold;font-size:1.1rem;font-family:'B Yekan'">
                @*@Html.DisplayNameFor(model => model.setting.ToDate)*@
                تا تاریخ
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.setting.ToDate)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form method="post">
            <input type="hidden" asp-for="setting.Id" />
            <button type="submit" style="width:auto;border-radius: 10em;font-size:medium" asp-route-type="@Model.setting.Type"
                   asp-route-fromdate="@Model.setting.FromDate" asp-route-todate="@Model.setting.ToDate" class="btn btn-primary">بارگذاری</button> |
            <a asp-page="/Settings/SavedSetting" asp-route-type="@Model.setting.Type">بازگشت</a>
        </form>
    </div>
</div>

