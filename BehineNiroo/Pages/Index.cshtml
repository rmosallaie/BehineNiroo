@page
@model IndexModel
@{
    Layout = null;
    ViewData["Title"] = "خانه";
}
@inject SignInManager<IdentityUser> signInManager;
<!DOCTYPE html>


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BehineNiroo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="~/css/site.css" />*@
    <link rel="icon" href="~/images/BehinehLogo0.gif" />
    <!-- Font Awesome -->
    <link href="~/FontAwesome/css/all.css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="~/css/style.min.css" rel="stylesheet">
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="~/js/mdb.min.js"></script>
    <!-- Initializations -->
    <script type="text/javascript">
        // Animations initialization
        new WOW().init();
    </script>

    <style>
        .validation-summary-errors ul {
            list-style: none;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar fixed-top navbar-toggleable-sm navbar-expand-lg navbar-dark scrolling-navbar bg-dark mb-3">
            <div class="container">
                <a class="navbar-brand text-white" href="#">
                    <img src="~/images/BehinehLogo0.gif" height="35" alt="BehineNiroo logo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse ">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index" style="font-family:'B Yekan';font-size:1.2rem;">خانه</a>
                        </li>
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdownMenuLink"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    مدیریت
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="dropdown-item nav-link text-dark text-right" asp-area="" asp-page="/UserManagement/Index">کاربران</a>
                                    <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="dropdown-item nav-link text-dark text-right" asp-area="" asp-page="/Administration/ListRoles">نقش ها</a>
                                    <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="dropdown-item nav-link text-dark text-right" asp-area="" asp-page="/Account/ChangePassword">تغییر کلمه عبور</a>
                                </div>
                            </li>

                        }
                        <li class="nav-item">
                            <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="nav-link text-white" asp-area="" asp-page="/Event/Event">رخدادها</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="nav-link text-white" asp-area="" asp-page="/Energy/Energy">انرژی</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="nav-link text-white" asp-area="" asp-page="/Logger/Logger">لاگر</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="nav-link text-white" asp-area="" asp-page="/Online/Online">آنلاین</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="nav-link text-white" asp-area="" asp-page="">فرمان</a>
                        </li>
                        <li class="nav-item">
                            <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="nav-link text-white" asp-area="" asp-page="">Rmsخطای</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <li class="nav-item text-white">
                                <form method="post" asp-page="/Account/Logout">
                                    <button type="submit" style="width: auto; font-family: 'B Yekan'; font-size: 1.2rem;" class="nav-link btn btn-link py-0 text-white">
                                        خروج @User.Identity.Name
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a style="font-family: 'B Yekan'; font-size: 1.2rem;" class="nav-link text-white" asp-area="" asp-page="/Account/Login">ورود به حساب</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="view full-page-intro" style="
        background-image: url('images/wp3246615.jpg');
        background-repeat: no-repeat;
        background-size: cover;">
        <!-- Mask & flexbox options-->
        <div class="mask rgba-black-light d-flex justify-content-center align-items-center">

            <!-- Content -->
            <div class="container">

                <!--Grid row-->
                <div class="row wow fadeIn">

                    <!--Grid column-->
                    <div class="col-md-6 mb-4 white-text text-center text-md-left">

                        <h1 class="display-4 font-weight-bold text-right" style="font-family:'B Yekan'">شرکت بهینه نیرو اسپادان</h1>

                        <hr class="hr-light">

                        <p class="text-right">
                            <strong style="font-family:'B Yekan'">شرکت مهندسی</strong>
                        </p>

                        <p class="mb-4 d-none d-md-block">
                            <br />
                            <br />
                            <br />
                            <br />
                            <br />
                            @*<strong>
                                The most comprehensive tutorial for the Bootstrap 4. Loved by over 500 000 users. Video and written versions
                                available. Create your own, stunning website.
                            </strong>*@
                        </p>

                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    @if (!signInManager.IsSignedIn(User))
                    {
                        <div class="col-md-6 col-xl-5 mb-4">

                            <!--Card-->
                            <div class="card">

                                <!--Card content-->
                                <div class="card-body">

                                    <!-- Form -->
                                    <form name="" method="post" class="bg-transparent">
                                        <!-- Heading -->
                                        <h3 class="dark-grey-text text-center">
                                            <strong style="font-family:'B Yekan'">ورود به سامانه</strong>
                                        </h3>
                                        <hr>

                                        <div class="md-form input-with-post-icon">
                                            <i class="fas fa-user prefix"></i>
                                            <label class="text-right" style="font-family:'B Yekan'" asp-for="Input.Username" for="form3">نام کاربری</label>
                                            <input asp-for="Input.Username" id="form3" class="form-control" value="">
                                        </div>
                                        <div class="md-form input-with-post-icon">
                                            <i class="fas fa-lock prefix"></i>
                                            <label style="font-family:'B Yekan'" asp-for="Input.Password" for="form2">کلمه عبور</label>
                                            <input asp-for="Input.Password" id="form2" class="form-control">
                                        </div>

                                        <div asp-validation-summary="All" style="font-family:'B Yekan'; " class="text-danger text-right"></div>
                                        
                                        <div class="text-center">
                                            <button style="font-family:'B Yekan';border-radius:10em;font-size:medium" class="btn purple-gradient">ورود</button>
                                            <hr>
                                            <div class="form-group">
                                                <div class="checkbox">
                                                    <label style="font-family:'B Yekan'" asp-for="Input.RememberMe">
                                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                    </label>
                                                    <input asp-for="Input.RememberMe" />
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <!-- Form -->
                                </div>
                            </div>
                            <!--/.Card-->
                        </div>
                    }

                    <!--Grid column-->

                </div>
                <!--Grid row-->

            </div>
            <!-- Content -->

        </div>
        <!-- Mask & flexbox options-->

    </div>

    <footer class="page-footer text-center font-small wow fadeIn">
        <div class="footer-copyright py-3">
            &copy; 2020 - BehineNiroo
            <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
