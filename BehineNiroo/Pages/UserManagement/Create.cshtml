@page
@model BehineNiroo.CreateModel

@{
    ViewData["Title"] = "ایجاد کاربر جدید";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-white text-center">ایجاد کاربر جدید</h1>

@*<h4>User</h4>*@
<br />
<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <form method="post">
            <div class="card">
                <div class="card-body">
                    <div class="form-group text-right">
                        <label asp-for="NewUser.Username" class="control-label">نام کاربری</label>
                        <input asp-for="NewUser.Username" class="form-control" />
                        @*<span asp-validation-for="NewUser.Username" class="text-danger"></span>*@
                    </div>
                    <div class="form-group text-right">
                        <label asp-for="NewUser.Password" class="control-label">کلمه عبور</label>
                        <input asp-for="NewUser.Password" class="form-control" />
                        @*<span asp-validation-for="NewUser.Password" class="text-danger"></span>*@
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" style="width:auto;border-radius: 10em;font-size:medium">تایید</button> |
                        <a asp-page="Index">بازگشت</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="col-3"></div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
