@page
@model BehineNiroo.DeleteModel

@{
    ViewData["Title"] = "حذف کاربر";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-white text-center">حذف کاربر</h1>
<br />
<div class="card">
    <div class="card-header">
        <h3 class="text-right">آیا می خواهید این کاربر را حذف کنید؟</h3>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeleteUser.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeleteUser.Id)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeleteUser.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeleteUser.UserName)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form method="post">
            <input type="hidden" asp-for="DeleteUser.Id" />
            <button type="submit" asp-route-id="@Model.DeleteUser.Id" class="btn btn-danger" style="width:auto;border-radius: 10em;font-size:medium">حذف</button> |
            <a asp-page="./Index">بازگشت</a>
        </form>
    </div>
</div>

