@page
@model BehineNiroo.LoginModel
@{
    ViewData["Title"] = "ورود به سامانه";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-white text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group text-right">
                            <label asp-for="Input.Username">نام کاربری</label>
                            <input asp-for="Input.Username" class="form-control" />
                            @*<span asp-validation-for="Input.Username" class="text-white"></span>*@
                        </div>
                        <div class="form-group text-right">
                            <label asp-for="Input.Password">کلمه عبور</label>
                            <input asp-for="Input.Password" class="form-control" />
                            @*<span asp-validation-for="Input.Password" class="text-white"></span>*@
                        </div>
                        <div class="form-group text-right">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">

                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                                <input asp-for="Input.RememberMe" />
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-danger text-right"></div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary" style="border-radius: 10em;font-size:medium">ورود</button>
                    </div>
                </div>

                @*<div class="form-group">

                    </div>*@
                @*<div class="form-group">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>*@
            </form>
        </section>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


