@page
@model BehineNiroo.CreatRoleModel
@{
    ViewData["Title"] = "ایجاد نقش جدید";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="text-white text-center">ایجاد نقش جدید</h1>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-action="CreateRole" method="post" class="mt-3">
            <div asp-validation-summary="All" class="text-white bg-danger text-right">
            </div>
            <div class="card">
                <div class="card-header">
                    <h2><label asp-for="NewRole.RoleName"></label></h2>
                </div>
                <div class="card-body">
                    <input asp-for="NewRole.RoleName" class="form-control" placeholder="نام نقش">
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary" style="width:auto;border-radius: 10em;font-size:medium">
                        ایجاد نقش
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>